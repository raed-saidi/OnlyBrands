<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}OnlyBrands Admin{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-100 font-sans">
<nav class="bg-blue-600 text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
        <a href="{{ path('admin_dashboard') }}" class="text-2xl font-bold">OnlyBrands Admin</a>
        <div>
            <a href="{{ path('admin_dashboard') }}" class="px-4 hover:underline">Dashboard</a>
            <a href="{{ path('admin_products') }}" class="px-4 hover:underline">Products</a>
            <a href="{{ path('admin_categories') }}" class="px-4 hover:underline">Categories</a>
            <a href="{{ path('admin_orders') }}" class="px-4 hover:underline">Orders</a>
            <a href="{{ path('app_logout') }}" class="px-4 hover:underline">Logout</a>
        </div>
    </div>
</nav>
<div class="container mx-auto mt-6">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="bg-{{ type == 'success' ? 'green' : 'red' }}-100 border-l-4 border-{{ type == 'success' ? 'green' : 'red' }}-500 text-{{ type == 'success' ? 'green' : 'red' }}-700 p-4 mb-4" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
</div>
<footer class="bg-gray-800 text-white p-4 mt-8">
    <div class="container mx-auto text-center">
        <p>&copy; {{ 'now'|date('Y') }} OnlyBrands Admin. All rights reserved.</p>
    </div>
</footer>
{% block javascripts %}{% endblock %}
</body>
</html>